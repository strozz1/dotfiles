yabai -m config layout bsp #default layout
yabai -m config window_placement second_child
# yabai -m window_shadow on
# yabai -m active_window_opacity 1.0
# yabai -m normal_window_opacity 0.90

# Padding
yabai -m config top_padding 6
yabai -m config bottom_padding 6
yabai -m config right_padding 6
yabai -m config left_padding 6
yabai -m config window_gap 6

# mouse settings
yabai -m config mouse_follows_focus on
yabai -m config mouse_modifier alt #left click + drag
yabai -m config mouse_action1 move
yabai -m config mouse_action2 resize
yabai -m config mouse_drop_action swap #swap windows

# Disable specific apps
yabai -m rule --add app="^System Settings$" manage=off
yabai -m rule --add app="Calculadora" manage=off
yabai -m rule --add app="^Karabiner-Element$" manage=off
yabai -m rule --add app="^App Store$" manage=off
yabai -m rule --add app="^Calendar$" manage=off
yabai -m rule --add app="^Finder$" manage=off
yabai -m rule --add app="^DBeaver$" manage=off
yabai -m rule --add app="^Discord$" manage=off
